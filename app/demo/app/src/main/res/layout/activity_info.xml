<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/green"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textSize="30dp"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:text="About"
        android:gravity="center"
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_margin="24dp"
        android:layout_gravity="center"
        android:text="testing testing testing testing\ntesting testing testing testing\ntesting testing testing testing\ntesting testing testing testing"
        android:textStyle="normal"
        android:textSize="16dp"
        android:textColor="@color/textColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:id="@+id/infoResponse"
        android:text="NULL"
        android:textColor="@color/textColor"
        android:layout_margin="24dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

    <Button
        android:id="@+id/infoTest"
        android:text="Click to Test Connection"
        android:textAllCaps="false"
        android:textSize="16dp"
        app:shapeAppearanceOverlay="@style/Button5"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:backgroundTint="@color/yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Button>

    <Button
        android:id="@+id/infoBack"
        android:text="Back"
        android:textAllCaps="false"
        android:textSize="16dp"
        app:shapeAppearanceOverlay="@style/Button5"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:backgroundTint="@color/yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Button>

</LinearLayout>